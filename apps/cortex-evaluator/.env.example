# ============================================
# CORTEX EVALUATOR - ENVIRONMENT VARIABLES
# ============================================

# Database Configuration
# ======================
# For development (SQLite): sqlite:///./data/cortex.db
# For production (PostgreSQL): postgresql+psycopg2://user:password@postgres:5432/cortex_evaluator
DATABASE_URL=postgresql+psycopg2://cortex:cortex@postgres:5432/cortex_evaluator
POSTGRES_USER=cortex
POSTGRES_PASSWORD=cortex
POSTGRES_DB=cortex_evaluator
POSTGRES_PORT=5432

# Redis Configuration
# ====================
# Format: redis://:password@host:port
REDIS_URL=redis://:cortex@redis:6379
REDIS_PASSWORD=cortex
REDIS_PORT=6379

# ChromaDB Configuration
# ======================
CHROMA_HOST=chromadb
CHROMA_PORT=8000
CHROMA_PATH=/app/data/chroma
CHROMA_AUTH_TOKEN=cortex-token
CHROMA_TELEMETRY=False
CHROMA_PORT=8001

# AI Provider API Keys
# =====================
# Required for AI-powered evaluations and responses
GEMINI_API_KEY=
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GROQ_API_KEY=
OLLAMA_BASE_URL=http://ollama:11434

# GitHub Integration
# ===================
# Optional: for GitHub repository analysis
GITHUB_API_TOKEN=

# Service Ports
# ==============
BACKEND_PORT=8000
FRONTEND_PORT=3000

# CORS Configuration
# ===================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:80

# Frontend Configuration
# ======================
VITE_API_URL=http://localhost:8000
VITE_API_KEY=

# Production Settings
# ===================
# Set to "true" for production builds
NODE_ENV=development

# Security
# ========
# Secret key for session encryption (generate a random string)
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# Logging
# =======
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Rate Limiting
# =============
MAX_REQUESTS_PER_MINUTE=60

# File Upload
# ===========
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=.txt,.md,.py,.js,.ts,.java,.go,.rs,.cpp,.c,.h,.hpp
