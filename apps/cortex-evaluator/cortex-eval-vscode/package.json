{
  "name": "cortex-eval-vscode",
  "displayName": "Cortex Evaluator",
  "description": "AI-powered codebase evaluation and CR generation",
  "version": "1.0.0",
  "publisher": "cortex-evaluator",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Machine Learning"
  ],
  "activationEvents": [
    "onCommand:cortex-eval.analyzeFile",
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cortexEval",
          "title": "Cortex Evaluator",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "cortexEval": [
        {
          "type": "webview",
          "id": "cortexEval.sidePanel",
          "name": "Evaluation Results"
        }
      ]
    },
    "commands": [
      {
        "command": "cortex-eval.analyzeFile",
        "title": "Analyze Current File",
        "category": "Cortex Evaluator"
      },
      {
        "command": "cortex-eval.analyzeSelection",
        "title": "Analyze Selection",
        "category": "Cortex Evaluator"
      },
      {
        "command": "cortex-eval.searchSimilar",
        "title": "Search Similar Evaluations",
        "category": "Cortex Evaluator"
      },
      {
        "command": "cortex-eval.pushCR",
        "title": "Push to GitHub Issue",
        "category": "Cortex Evaluator"
      },
      {
        "command": "cortex-eval.openWorkspace",
        "title": "Open Web Workspace",
        "category": "Cortex Evaluator"
      },
      {
        "command": "cortex-eval.showSidePanel",
        "title": "Show Cortex Panel",
        "category": "Cortex Evaluator"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "cortex-eval.analyzeSelection",
          "when": "editorHasSelection",
          "group": "cortex-eval@1"
        },
        {
          "command": "cortex-eval.searchSimilar",
          "when": "editorHasSelection",
          "group": "cortex-eval@2"
        }
      ],
      "commandPalette": [
        {
          "command": "cortex-eval.analyzeFile",
          "when": "editorTextFocus"
        },
        {
          "command": "cortex-eval.analyzeSelection",
          "when": "editorHasSelection"
        }
      ]
    },
    "keybindings": [
      {
        "command": "cortex-eval.analyzeFile",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a"
      },
      {
        "command": "cortex-eval.analyzeSelection",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e"
      }
    ],
    "configuration": {
      "title": "Cortex Evaluator",
      "properties": {
        "cortexEval.apiUrl": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "Backend API URL"
        },
        "cortexEval.codebaseId": {
          "type": "string",
          "default": "",
          "description": "Default codebase ID for evaluations"
        },
        "cortexEval.projectId": {
          "type": "string",
          "default": "",
          "description": "Project ID for this workspace"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "axios": "^1.6.5"
  }
}
